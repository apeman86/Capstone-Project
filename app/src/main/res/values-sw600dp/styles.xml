<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="selector">
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="AppTheme.MainActivity" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="PlayTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>